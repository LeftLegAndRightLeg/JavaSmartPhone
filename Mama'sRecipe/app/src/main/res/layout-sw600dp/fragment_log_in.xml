<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="src.mamasrecipe.loginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        >
        <!--  Account Label -->
        <TextView
            android:id="@+id/accountLogInTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:text="UserName: "/>
        <EditText
            android:id="@+id/accountLogInEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:singleLine="true"
            android:layout_margin="36dip"
            android:hint="  Email Adress"
            />
        <!--  Password Label -->

        <TextView
            android:id="@+id/pwLogInTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PassWord: "
            android:textSize="40sp" />

        <EditText
            android:id="@+id/pwLogInEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:password="true"
            android:singleLine="true"
            android:layout_margin="36dip"
            android:hint="  PassWord"
            />

        <!-- Link to Registration Screen -->

    </LinearLayout>
    <!-- Login Form Ends -->

    <Button
        android:id="@+id/logInSubmitButton"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="75dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Submit"
        android:textSize="40sp"
        android:typeface="serif" />

</RelativeLayout>
