<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="src.mamasrecipe.RecipeFragment">

    <ImageView
        android:id="@+id/recipeimageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/recipeDishName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainDish"
        android:gravity="center"
        android:textColor="#000"
        android:layout_toRightOf="@+id/recipeimageView1"
        android:layout_marginTop="44dp"
        android:textSize="55sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </TextView>
    <ImageView
        android:id="@+id/recipeimageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/recipeDishName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salad"
        android:textSize="55sp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_toRightOf="@+id/recipeimageView2"
        android:layout_marginTop="244dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </TextView>
    <ImageView
        android:id="@+id/recipeimageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/recipeDishName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert"
        android:textSize="55sp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_toRightOf="@+id/recipeimageView3"
        android:layout_marginTop="444dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </TextView>

</RelativeLayout>
